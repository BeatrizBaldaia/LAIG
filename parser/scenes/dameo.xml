<SCENE>
    <INITIALS>
        <frustum near="0.001" far="500"/>
        <translation x="0" y="0" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="1" sy="1" sz="1" />
        <reference length="1" />
    </INITIALS>
    <ILLUMINATION>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <doubleside value="1" />
        <background r="0" g="0" b="0" a="1" />
    </ILLUMINATION>
    <LIGHTS>
        <LIGHT id="light0">
            <enable value ="1" />
            <position  x="1" y="1" z="1" w="1" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r=".7" g=".7" b=".7" a="1" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
    </LIGHTS>
    <TEXTURES>
        <TEXTURE id="board">
            <file path="images/tabuleiro.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
        <TEXTURE id="coroa">
            <file path="images/coroa.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
        <TEXTURE id="interface">
            <file path="images/interface.png" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
    </TEXTURES>
    <MATERIALS>
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.4" g="0.4" b="0.4" a="1" />
            <emission r="1.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <MATERIAL id="player1">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0" g="0" b="0" a="1" />
            <ambient r="0" g="1" b="0" a="1" />
            <emission r="0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <MATERIAL id="player2">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0" g="0" b="0" a="1" />
            <ambient r="0" g="0" b="1" a="1" />
            <emission r="0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <MATERIAL id="red">
            <shininess value="1" />
            <specular r="1" g="0.0" b="0.0" a="1" />
            <diffuse r=".3" g="0" b="0" a="1" />
            <ambient r=".1" g="0" b="0" a="1" />
            <emission r="0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <MATERIAL id="green">
            <shininess value="1" />
            <specular r="0" g="1" b="0.0" a="1" />
            <diffuse r="0" g=".3" b="0" a="1" />
            <ambient r="0" g=".1" b="0" a="1" />
            <emission r="0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
    </MATERIALS>
	  <ANIMATIONS>
      <ANIMATION id="movePiece" speed="1" type="linear">
              <controlpoint xx="0" yy="0" zz="0"/>
              <controlpoint xx="0" yy="2" zz="2"/>
      </ANIMATION>
	  </ANIMATIONS>
    <NODES>

        <ROOT id="root" />

        <!-- The root node -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="null" />
            <DESCENDANTS>
              <NODEREF id="game" />
              <NODEREF id="tabuleiro" />
              <NODEREF id="interface" />
            </DESCENDANTS>
        </NODE>
        <NODE id="interface">
          <MATERIAL id="null" />
          <TEXTURE id="interface" />
          <DESCENDANTS>
            <NODEREF id="type" />
            <NODEREF id="film" />
            <NODEREF id="level" />
            <LEAF type="patch" args="10 10">
                <CPLINE>
                  <CPOINT xx="0" yy="0" zz="-0.2" ww="1" />
                  <CPOINT xx="0" yy="5" zz="-0.2" ww="1" />
                </CPLINE>
                <CPLINE>
                  <CPOINT xx="10" yy="0" zz="-0.2" ww="1" />
                  <CPOINT xx="10" yy="5" zz="-0.2" ww="1" />
                </CPLINE>
            </LEAF>
          </DESCENDANTS>
        </NODE>
        <NODE id="type" selectable="1">
          <MATERIAL id="null" />
          <TEXTURE id="clear" />
          <DESCENDANTS>
            <LEAF  type="rectangle" args="3 2 4 1" />
          </DESCENDANTS>
        </NODE>
        <NODE id="level" selectable="1">
          <MATERIAL id="green" />
          <TEXTURE id="clear" />
          <DESCENDANTS>
            <LEAF  type="rectangle" args="1 2 2 1" />
          </DESCENDANTS>
        </NODE>
        <NODE id="film" selectable="1">
          <MATERIAL id="null" />
          <TEXTURE id="null" />
          <DESCENDANTS>
            <LEAF  type="rectangle" args="5 2 6 1" />
          </DESCENDANTS>
        </NODE>
        <NODE id="piece" >
          <MATERIAL id="null" />
          <TEXTURE id="null" />
          <TRANSLATION x=".5" y=".25" z=".5" />
          <SCALE sx="1" sy=".5" sz="1" />
          <DESCENDANTS>
            <LEAF  type="sphere" args=".5 20 20" />
          </DESCENDANTS>
        </NODE>
        <NODE id="tile">
          <MATERIAL id="null" />
          <TEXTURE id="clear" />
          <TRANSLATION x="0" y=".1" z="1" />
          <ROTATION axis="x" angle="-90" />
          <DESCENDANTS>
            <LEAF  type="rectangle" args="0 1 1 0" />
          </DESCENDANTS>
        </NODE>
        <NODE id="game">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <DESCENDANTS>
            	<LEAF type="patch" />
            </DESCENDANTS>
        </NODE>
        <NODE id="tabuleiro">
            <MATERIAL id="null" />
            <TEXTURE id="board" />

            <DESCENDANTS>
            	<LEAF type="patch" args="10 10">
                    <CPLINE>
                        <CPOINT xx="0" yy="0" zz="0" ww="1" />
                        <CPOINT xx="10" yy="0" zz="0" ww="1" />
                    </CPLINE>
                    <CPLINE>
                        <CPOINT xx="0" yy="0" zz="10" ww="1" />
                        <CPOINT xx="10" yy="0" zz="10" ww="1" />
                    </CPLINE>
                </LEAF>
            </DESCENDANTS>
        </NODE>
    </NODES>
</SCENE>
