<SCENE>
    <INITIALS>
        <frustum near="0.001" far="500"/>
        <translation x="0" y="0" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="1" sy="1" sz="1" />
        <reference length="1" />
    </INITIALS>
    <ILLUMINATION>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <doubleside value="1" />
        <background r="0.10588" g="0.2" b="0.51372" a="1" />
    </ILLUMINATION>
    <LIGHTS>
        <LIGHT id="light0">
            <enable value ="1" />
            <position  x="1" y="1" z="1" w="1" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r=".7" g=".7" b=".7" a="1" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
    </LIGHTS>
    <TEXTURES>
        <TEXTURE id="fire_le">
            <file path="images/fire_le.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
    </TEXTURES>
    <MATERIALS>
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.4" g="0.4" b="0.4" a="1" />
            <emission r="1.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
    </MATERIALS> 
	<ANIMATIONS>
		<ANIMATION id="ani1" speed="10" type="linear">
			<controlpoint xx="0" yy="0" zz="0" /> <!-- P1 -->
			<controlpoint xx="1" yy="1" zz="1" /> <!-- P2 -->
			<controlpoint xx="2" yy="2" zz="2" /> <!-- P3 -->
			<controlpoint xx="3" yy="3" zz="3" /> <!-- P4 -->
		</ANIMATION>
	</ANIMATIONS>
    <NODES>

        <ROOT id="root" />

        <!-- The root node -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="fire_le" />
            <DESCENDANTS>
				<NODEREF id="teste" />
            </DESCENDANTS>
        </NODE>
        <NODE id="teste">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

			<ANIMATIONREFS>
				<ANIMATIONREF id="ani1" />
			</ANIMATIONREFS>
            <DESCENDANTS>
                <LEAF id="triangle1" type="triangle" args="0 0 0 1 0 0 0 1 0" />
            </DESCENDANTS>
        </NODE>
    </NODES>
</SCENE>
