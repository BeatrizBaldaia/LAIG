<SCENE>
    <INITIALS>
        <frustum near="0.001" far="500"/>
        <translation x="0" y="0" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="1" sy="1" sz="1" />
        <reference length="1" />
    </INITIALS>
    <ILLUMINATION>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <doubleside value="1" />
        <background r="0.10588" g="0.2" b="0.51372" a="1" />
    </ILLUMINATION>
    <LIGHTS>
        <LIGHT id="light0">
            <enable value ="1" />
            <position  x="1" y="1" z="1" w="1" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r=".7" g=".7" b=".7" a="1" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
    </LIGHTS>
    <TEXTURES>
        <TEXTURE id="fire_le">
            <file path="images/fire_le.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
    </TEXTURES>
    <MATERIALS>
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.4" g="0.4" b="0.4" a="1" />
            <emission r="1.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
    </MATERIALS> 
	<ANIMATIONS>
		<ANIMATION id="ani1" speed="1" type="bezier">
			<controlpoint xx="0" yy="0" zz="0" /> <!-- P1 -->
			<controlpoint xx="10" yy="0" zz="0" /> <!-- P2 -->
			<controlpoint xx="10" yy="0" zz="10" /> <!-- P3 -->
			<controlpoint xx="0" yy="00" zz="10" /> <!-- P4 -->
		</ANIMATION>
		<ANIMATION id="ani2" speed="1" type="circular"
			centerx="1" centery="0" centerz="1"
			radius="2" startang="30" rotang="360"
			/>
		<ANIMATION id="ani3" speed="1" type="linear">
			<controlpoint xx="0" yy="0" zz="0" />
			<controlpoint xx="1" yy="0" zz="0" /> 
			<controlpoint xx="0" yy="2" zz="0" /> 
			<controlpoint xx="3" yy="3" zz="0" /> 
		</ANIMATION>
        <ANIMATION id="ani4" type="combo">
            <SPANREF id="ani1" />
            <SPANREF id="ani3" />
            <SPANREF id="ani2" />
        </ANIMATION>
	</ANIMATIONS>
    <NODES>

        <ROOT id="root" />

        <!-- The root node -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="fire_le" />
            <DESCENDANTS>
			<!---	<NODEREF id="teste" />
                <NODEREF id="teste2" />
				<NODEREF id="shader" />-->
				<NODEREF id="linear" />
            </DESCENDANTS>
        </NODE>
        <NODE id="teste">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <SCALE sx="1" sy="2" sz="1" />

			<ANIMATIONREFS>
				<ANIMATIONREF id="ani2" />
			</ANIMATIONREFS>
            <DESCENDANTS>
                <LEAF id="triangle1" type="triangle" args="0 0 0 0 0 1 1 0 0" />
            </DESCENDANTS>
        </NODE>

        <NODE id="teste2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <SCALE sx="2" sy="1" sz="1" />
            <ANIMATIONREFS>
                <ANIMATIONREF id="ani4" />
            </ANIMATIONREFS>
            <DESCENDANTS>
                <LEAF id="triangle1" type="triangle" args="0 0 0 0 0 1 1 0 0" />
            </DESCENDANTS>
        </NODE>
       	<NODE id="lado1" selectable="1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <LEAF id="triangle1" type="triangle" args="0 .2 0 0 0 1 .5 0 0" />
            </DESCENDANTS>
        </NODE>
		<NODE id="lado2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <LEAF id="triangle1" type="triangle" args="0 .2 0 -.5 0 0 0 0 1" />
            </DESCENDANTS>
        </NODE>
       	<NODE id="shader" selectable="1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <DESCENDANTS>
				<NODEREF id="lado1" />
				<NODEREF id="lado2" />
				<LEAF id="cone1" type="cylinder" args="1 1 .7 100 100 0 0" />
            </DESCENDANTS>
        </NODE>
        <NODE id="linear" selectable="1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
             <TRANSLATION x="0" y="0" z="-1.5" />

			<DESCENDANTS>
                <LEAF type="cylinder" args="3 1 0 12 12 0 1" />
            </DESCENDANTS>
        </NODE>
    </NODES>
</SCENE>
